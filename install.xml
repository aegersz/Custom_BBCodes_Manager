<!-------------------------------------------------------------------------->
<!-- Better Modify Board UI (ManageBoards.php)                            -->
<!-------------------------------------------------------------------------->
<file name="$sourcedir/ManagePosts.php">
	<operation>
		<search position="before"><![CDATA[		'bbc' => 'ModifyBBCSettings',
]]></search>
		<add><![CDATA[		'custombbc' => 'CustomBBCodes_Browse',
]]></add>
	</operation>
</file>

